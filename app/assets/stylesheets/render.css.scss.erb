#third p, #third h1, #third h2, #third h3, #third h4, #third h5, #third h6 {color: black;}
#third h2 {font-weight:300;}

#fourth {
	background: image-url("thirdBG.jpg") 50% 0 no-repeat fixed;
	color: white;
	height: 1200px;
	padding: 100px 0 0 0;
}
#fifth {
	background: image-url("fifthBG.jpg") 50% 0 no-repeat fixed;
